<%= erb :"partials/header" %>
<%if shirts%>
  <ul>
    <%shirts.each {|shirt|%>
    <li>
      <div class="shirts_list">
        <img src="<%=shirt.image%>">
        <a href="/shirts/<%=shirt.id%>">
        <h4>
        <span class="shirt_brand"><%=shirt.brand%></span>
        <span class="shirt_name"><%=shirt.name%></span>
        </h4>
        </a>
        <span class="shirt_price"><%=shirt.price%></span>
        <a class="linkbutton" href="/shirts/<%=shirt.id%>/admin">EDIT</a>
        <form method="POST" action="/shirts/<%=shirt.id%>">
            <input type="hidden" name="_method" value="DELETE">
            <input type="submit" value="DELETE">
        </form>
      </div>
    </li>
  <%}%>
  </ul>
    <%else%>
    <div class="wrong">
        <img class="sorry" src="#">
        <p> Sorry we don't have any T-shirts of that nature</p>

<%end%>

<form action="/shirts/" method="POST">
  <input type="text" name="name" placeholder="t-1000">
  <input type="text" name="color" placeholder="rainbow">
  <input type="number" name="quantity" placeholder="1">
  <input type="number" name="price" placeholder="88.34">
  <input type="text" name="image" placeholder="http://www.tees2shop.info/products/1136535.png">
  <input type="text" name="brand" value="BFGY">
  <input type="submit" class="update" value="CONFIRM/UPDATE">
</form>

<%= erb :"partials/footer" %>
